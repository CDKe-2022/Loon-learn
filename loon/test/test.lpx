#!desc=定时任务及Cookie获取,去除起点开屏、不跳转精选页、去除广告列表、去除每日导读、去除悬浮书架广告、去除活动弹窗、青少年模式弹窗
#!author= McDaSheng app2smile
#!tag = 去广告
#!openUrl = https://raw.githubusercontent.com/CDKe-2022/Loon-learn/refs/heads/main/loon/test/qidian.plugin
#!date = 2025-08-26 18:05:47
#!icon=https://github.com/CDKe-2022/Loon-learn/blob/main/icon/qidiandushu.PNG?raw=true

[Rewrite]

# 开屏页广告
^https:\/\/magev6\.if\.qidian\.com\/argus\/api\/v4\/client\/getsplashscreen$ response-body-json-jq '.Data.List = null | if .Data.EnableGDT == 1 then .Data.EnableGDT = 0 else . end'

# 不跳转精选页
^https:\/\/magev6\.if\.qidian\.com\/argus\/api\/v2\/deeplink\/geturl$ response-body-json-jq '.Data.ActionUrl = ""'

# iOS_tab 广告
^https:\/\/magev6\.if\.qidian\.com\/argus\/api\/v1\/adv\/getadvlistbatch\?positions=iOS_tab$ response-body-json-jq '.Data.iOS_tab = []'

# 每日导读
^https:\/\/magev6\.if\.qidian\.com\/argus\/api\/v2\/dailyrecommend\/getdailyrecommend$ response-body-json-jq '.Data.Items = []'

# 书架悬浮广告
^https:\/\/magev6\.if\.qidian\.com\/argus\/api\/v1\/bookshelf\/getHoverAdv$ response-body-json-jq 'del(.Data.ItemList)'

# 客户端配置 getconf (POST)
^https:\/\/magev6\.if\.qidian\.com\/argus\/api\/v1\/client\/getconf$ response-body-json-jq '
    .Data.ActivityPopup = null |
    .Data.WolfEye = 0 |
    (.Data.CloudSetting?.TeenShowFreq) |= "0" |
    (.Data.ActivityIcon) |= {Type: 0, StartTime: 0, EndTime: 0} |
    .Data.EnableSearchUser = "1"
' method=post

# 【可选】书架顶部背景广告
^https?:\/\/magev6\.if\.qidian\.com\/argus\/api\/v1\/bookshelf\/getTopOperation$ response-body-json-jq 'del(.Data.Items, .Data.MainInfo)'
[MITM]
hostname = h5.if.qidian.com, magev6.if.qidian.com
